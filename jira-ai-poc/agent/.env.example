# JIRA Semantic Agent Configuration
# Copy to .env and fill in your values

# VulcanSQL (Data API) Base URL
VULCAN_BASE_URL=http://localhost:3001

# Cube API Base URL
CUBE_BASE_URL=http://localhost:4000/cubejs-api/v1

# Semantic Layer Config Path (in Cube project)
SEMANTIC_CONFIG_PATH=../cube-jira/semantic

# OpenAI API (for LLM query generation)
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o-mini

# GigaChat API (alternative LLM - Sber)
# Get credentials from https://developers.sber.ru/portal/products/gigachat-api
GIGACHAT_CREDENTIALS=your-base64-credentials-here
GIGACHAT_MODEL=GigaChat

# Agent server port
AGENT_PORT=8000
